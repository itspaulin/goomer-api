{
  "name": "goomer-api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/infra/main.ts",
    "dev": "nodemon --exec bun src/infra/main.ts",
    "migrate": "bunx drizzle-kit generate && bunx drizzle-kit push",
    "test": "node scripts/test-all.js",
    "test:unit": "vitest --config vite.config.ts",
    "test:e2e": "vitest --config vite.config.e2e.ts",
    "test:unit:run": "vitest run --config vite.config.ts",
    "test:e2e:run": "vitest run --config vite.config.e2e.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:coverage:unit": "vitest --coverage --config vite.config.ts",
    "test:coverage:e2e": "vitest --coverage --config vite.config.e2e.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "4.0.3",
    "@vitest/ui": "4.0.3",
    "drizzle-kit": "^0.31.5",
    "nodemon": "^3.1.10",
    "redoc-cli": "^0.13.21",
    "supertest": "^7.1.4",
    "vitest": "^4.0.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@scalar/express-api-reference": "^0.8.22",
    "@types/luxon": "^3.7.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "luxon": "^3.7.2",
    "postgres": "^3.4.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  }
}
